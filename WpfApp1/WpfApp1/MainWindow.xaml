<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:view="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000" WindowState="Maximized">
    <view:MainView>
        <!-- scale the microwave smaller -->
        <view:MainView.RenderTransform>
            <ScaleTransform ScaleX="0.6" ScaleY="0.6"></ScaleTransform>
        </view:MainView.RenderTransform>
    </view:MainView>
</Window>
